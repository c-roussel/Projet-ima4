<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="88dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <ToggleButton
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/lvl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:text="Lvl1"
        android:layout_alignTop="@+id/toggle"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/lvl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lvl1"
        android:layout_alignStart="@+id/lvl1"
        android:layout_below="@+id/lvl1"
        android:layout_marginTop="18dp"
        android:text="Lvl2" />

    <Button
        android:id="@+id/lvl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lvl3"
        android:layout_below="@+id/lvl2"
        android:layout_alignLeft="@+id/lvl2"
        android:layout_alignStart="@+id/lvl2"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/lvl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lvl4"
        android:layout_below="@+id/lvl3"
        android:layout_alignLeft="@+id/lvl3"
        android:layout_alignStart="@+id/lvl3"
        android:layout_marginTop="23dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/app_icon_size"
        android:layout_marginBottom="19dp"
        android:text="TextView"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/toggle"
        android:layout_alignStart="@+id/toggle" />
</RelativeLayout>